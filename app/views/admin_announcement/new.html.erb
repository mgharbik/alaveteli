<% @title = _('New announcement') %>

<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1><%= @title %></h1>
    </div>
  </div>
</div>

<%= form_tag [:admin, @announcement], class: 'form form-horizontal' do %>
  <%= render partial: 'form' %>
  <div class="form-actions">
    <%= submit_tag 'Create', class: 'btn btn-success' %>
  </div>
<% end %>
